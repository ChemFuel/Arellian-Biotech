<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<XenotypeDef>
		<defName>Arellian</defName>
		<label>Arellian</label>
		<description>TEST</description>
		<descriptionShort>TEST</descriptionShort>
		<iconPath>UI/Icons/Xenotypes/Custom/CustomXenotypeIcon4</iconPath>
		<inheritable>true</inheritable>
		<nameMaker>Arellian_PawnNamer</nameMaker>
		<nameMakerFemale>Arellian_PawnNamerFemale</nameMakerFemale>
		<chanceToUseNameMaker>1</chanceToUseNameMaker>
		<genes>
			<li>Temper_Arellian</li>
			<li>CombatInstinct_Arellian</li>
			<li>Physique_Arellian</li>
			<li>Hair_Arellian</li>
			<li>Skin_Arellian</li>
			<li>Eyes_Arellian</li>
			<li>Ears_Arellian</li>
			<li>VoiceArellian</li>

			<li>Libido_High</li>
			<li>Fertile</li>
			<li>Beard_NoBeardOnly</li>
			<li>Body_Standard</li>

			<li>StrongStomach</li>
			<li>Superclotting</li>
			<li>AptitudePoor_Artistic</li>
			<li>AptitudeTerrible_Animals</li>
		</genes>
		<factionlessGenerationWeight>0</factionlessGenerationWeight>
	</XenotypeDef>

<!--== GENE ==-->
<!--This is not balanced, I know. But do I care? No.-->

	<GeneCategoryDef>
		<defName>Arellian</defName>
		<label>arellian</label>
		<displayPriorityInXenotype>117</displayPriorityInXenotype>
	</GeneCategoryDef>

	<GeneDef Name="GeneArellianBase" Abstract="True">
		<displayCategory>Arellian</displayCategory>
		<symbolPack><wholeNameSymbols>
			<li><symbol>Arellian</symbol></li>
		</wholeNameSymbols></symbolPack>
	</GeneDef>

	<GeneDef ParentName="GeneArellianBase">
		<defName>Temper_Arellian</defName>
		<label>Arellian temper</label>
		<biostatCpx>6</biostatCpx>
		<biostatMet>3</biostatMet>
		<description>Carriers of this gene are disciplined and calm. They are half as likely to start social fights or break out of prison, but any mental break they have will be an aggressive type.</description>
		<iconPath>UI/Icons/Genes/Gene_Aggressive</iconPath>
		<socialFightChanceFactor>0.5</socialFightChanceFactor>
		<aggroMentalBreakSelectionChanceFactor>999</aggroMentalBreakSelectionChanceFactor>
		<prisonBreakMTBFactor>2</prisonBreakMTBFactor>
		<displayOrderInCategory>0</displayOrderInCategory>
		<forcedTraits>
			<li><def>Arellian_WarHawk</def></li>
		</forcedTraits>
		<statFactors>
			<CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">0.25</CertaintyLossFactor>
		</statFactors>
		<exclusionTags>
			<li>Aggressive</li>
		</exclusionTags>
	</GeneDef>

	<GeneDef ParentName="GeneArellianBase">
		<defName>CombatInstinct_Arellian</defName>
		<label>Arellian combat instinct</label>
		<biostatCpx>12</biostatCpx>
		<biostatMet>-2</biostatMet>
		<description>Carriers of this gene are instinctively better in combat. They .</description>
		<iconPath>UI/Icons/Genes/Gene_StrongMeleeDamage</iconPath>
		<displayOrderInCategory>1</displayOrderInCategory>
		<statFactors>
			<ShootingAccuracyPawn>1.5</ShootingAccuracyPawn>
			<MeleeCooldownFactor>0.90</MeleeCooldownFactor>
			<StaggerDurationFactor>0.80</StaggerDurationFactor>
		</statFactors>
		<statOffsets>
			<MeleeHitChance>2</MeleeHitChance>
		</statOffsets>
	</GeneDef>

	<GeneDef ParentName="GeneArellianBase">
		<defName>Physique_Arellian</defName>
		<label>Arellian physique</label>
		<biostatCpx>12</biostatCpx>
		<biostatMet>-1</biostatMet>
		<description>Carriers of this gene are known to be healthy and appealing to look.</description>
		<iconPath>UI/Icons/Genes/Gene_BodyStandard</iconPath>
		<displayOrderInCategory>2</displayOrderInCategory>
		<forcedHeadTypes>
			<li>ArellianMale_NormalA</li>
			<li>ArellianMale_NormalB</li>
			<li>ArellianFemale_NormalA</li>
			<li>ArellianFemale_NormalB</li>
		</forcedHeadTypes>
		<statFactors><!--Intended behavior-->
			<InjuryHealingFactor>1.25</InjuryHealingFactor>
			<ImmunityGainSpeed>1.05</ImmunityGainSpeed>
		</statFactors>
		<statOffsets>
			<Beauty>1</Beauty>
			<ComfyTemperatureMax>5</ComfyTemperatureMax>
			<ComfyTemperatureMin>-2.5</ComfyTemperatureMin>
		</statOffsets>
		<exclusionTags>
			<li>Fur</li>
		</exclusionTags>
	</GeneDef>

	<GeneDef ParentName="GeneHairColorBase">
		<displayCategory>Arellian</displayCategory>
		<defName>Hair_Arellian</defName>
		<label>honey-blonde hair</label>
		<hairColorOverride>(255,212,85)</hairColorOverride>
		<selectionWeight>0.50</selectionWeight>
		<selectionWeightFactorDarkSkin>0.75</selectionWeightFactorDarkSkin>
		<displayOrderInCategory>4</displayOrderInCategory>
	</GeneDef>

	<GeneDef ParentName="GeneSkinColorMelanin">
		<displayCategory>Arellian</displayCategory>
		<defName>Skin_Arellian</defName>
		<skinColorBase>(130, 91, 48)</skinColorBase>
		<minMelanin>0.83</minMelanin>
		<displayOrderInCategory>5</displayOrderInCategory>
	</GeneDef>

	<GeneDef ParentName="GeneEyeColor">
		<displayCategory>Arellian</displayCategory>
		<defName>Eyes_Arellian</defName>
		<label>amber eyes</label>
		<labelShortAdj>amber-eyed</labelShortAdj>
		<biostatCpx>3</biostatCpx>
		<biostatMet>-1</biostatMet>
		<description>Carriers of this gene have a rich yellow-pigmented eyes.</description>
		<iconPath>UI/Icons/Genes/Gene_RedEyes</iconPath>
		<displayOrderInCategory>6</displayOrderInCategory>
		<capMods>
			<li>
				<capacity>Sight</capacity>
				<postFactor>1.1</postFactor>
			</li>
		</capMods>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
				<texPath>ArellianThings/Pawn/Arellian/Heads/Eyes/Eye</texPath>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<parentTagDef>Head</parentTagDef>
				<visibleFacing>
					<li>East</li>
					<li>West</li>
					<li>South</li>
				</visibleFacing>
				<drawData>
					<defaultData>
						<layer>54</layer>
					</defaultData>
					<dataWest>
						<flip>true</flip>
					</dataWest>
				</drawData>
			</li>
		</renderNodeProperties>
	</GeneDef>

	<GeneDef ParentName="GeneEarsBase">
		<displayCategory>Arellian</displayCategory>
		<defName>Ears_Arellian</defName>
		<label>feline ears</label>
		<biostatCpx>3</biostatCpx>
		<biostatMet>-1</biostatMet>
		<description>Carriers of this gene have long, feline ears.</description>
		<iconPath>ArellianUI/Icons/Genes/Gene_Ear</iconPath>
		<displayOrderInCategory>7</displayOrderInCategory>
		<capMods>
			<li>
				<capacity>Hearing</capacity>
				<postFactor>1.1</postFactor>
			</li>
		</capMods>
		<renderNodeProperties>
			<li>
				<nodeClass>PawnRenderNode_AttachmentHead</nodeClass>
				<workerClass>PawnRenderNodeWorker_FlipWhenCrawling</workerClass>
				<texPath>ArellianThings/Pawn/Arellian/Heads/Ears/Ear</texPath>
				<colorType>Hair</colorType>
				<parentTagDef>Head</parentTagDef>
				<useRottenColor>true</useRottenColor>
				<rotDrawMode>Fresh, Rotting</rotDrawMode>
				<drawData>
					<defaultData>
						<layer>70</layer>
					</defaultData>
				</drawData>
			</li>
		</renderNodeProperties>
	</GeneDef>

	<GeneDef ParentName="GeneVoiceBase">
		<displayCategory>Arellian</displayCategory>
		<defName>VoiceArellian</defName>
		<label>feline voice</label>
		<biostatCpx>3</biostatCpx>
		<biostatMet>1</biostatMet>
		<description>Carriers have a meowing voice like that of a feline. It can be hard to understand sometimes.</description>
		<iconPath>UI/Icons/Genes/Gene_VoicePig</iconPath>
		<displayOrderInCategory>125</displayOrderInCategory>
		<capMods>
			<li>
				<capacity>Talking</capacity>
				<postFactor>0.9</postFactor>
			</li>
		</capMods>
		<soundCall>Pawn_Cat_Call</soundCall>
		<soundDeath>Pawn_Cat_Death</soundDeath>
		<soundWounded>Pawn_Cat_Injured</soundWounded>
	</GeneDef>
</Defs>