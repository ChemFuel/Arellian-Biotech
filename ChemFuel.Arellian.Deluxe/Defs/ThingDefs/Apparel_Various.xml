<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>Apparel_AR_FederationUniform</defName>
		<description>A comfortable military uniform of the Arellian Federation. It gives an aura of dignified authority.</description>
		<label>federation uniform</label>
		<possessionCount>1</possessionCount>
		<recipeMaker>
			<researchPrerequisite>ComplexClothing</researchPrerequisite>
			<displayPriority>215</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>ArellianThings/Pawn/Arellian/Apparel/Federation/Uniform/Uniform_Male_south</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.50</drawSize>
		</graphicData>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
			<Gold>50</Gold>
		</costList>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>2</Mass>
			<StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>1.75</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.20</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>3</EquipDelay>
		</statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.10</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>ArellianThings/Pawn/Arellian/Apparel/Federation/Uniform/Uniform</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li><weight>10</weight><only>(0,102,0)</only></li>
				<li><weight>1</weight><min>(50,50,50)</min><max>(150,150,150)</max></li>
			</options>
		</colorGenerator>
		<tradeTags>
			<li>BasicClothing</li>
		</tradeTags>
	</ThingDef>

	<ThingDef Name="Apparel_AR_FederationTrooperBase" ParentName="ArmorMachineableBase" Abstract="True">
		<techLevel>Spacer</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>ReconArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.5</uiIconScale>
		<statBases>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>1.00</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.55</ArmorRating_Blunt>
			<ArmorRating_Heat>1.00</ArmorRating_Heat>
		</statBases>
		<apparel>
			<useWornGraphicMask>true</useWornGraphicMask>
			<tags>
				<li>ArellianMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
			<soundWear>Wear_PowerArmor</soundWear>
			<soundRemove>Remove_PowerArmor</soundRemove>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li><weight>3</weight><only>(230,200,145)</only></li>
				<li><weight>2</weight><only>(200,50,50)</only></li>
				<li><weight>1</weight><min>(80,80,80)</min><max>(255,255,255)</max></li>
			</options>
		</colorGenerator>
		<comps>
			<li Class="CompProperties_Biocodable"/>
		</comps>
		<tradeTags>
			<li>HiTechArmor</li>
			<li>ArellianArmor</li>
		</tradeTags>
	</ThingDef>

	<ThingDef Name="Apparel_AR_FederationTrooperArmorBase" ParentName="Apparel_AR_FederationTrooperBase" Abstract="True">
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<ComponentSpacer>3</ComponentSpacer>
			<Plasteel>90</Plasteel>
			<Uranium>10</Uranium>
		</costList>
		<statBases>
			<WorkToMake>65000</WorkToMake>
			<MaxHitPoints>340</MaxHitPoints>
			<Mass>12</Mass>
			<Insulation_Cold>80</Insulation_Cold>
			<Insulation_Heat>15</Insulation_Heat>
			<EquipDelay>11</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.50</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/ReconArmor/ReconArmor</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
		</apparel>
	</ThingDef>

	<ThingDef Name="Apparel_AR_FederationTrooperHelmetBase" ParentName="Apparel_AR_FederationTrooperBase" Abstract="True">
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>35</Plasteel>
		</costList>
		<statBases>
			<WorkToMake>17500</WorkToMake>
			<MaxHitPoints>180</MaxHitPoints>
			<Mass>1</Mass>
			<Insulation_Cold>4</Insulation_Cold>
			<Insulation_Heat>2</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>0.5</ShootingAccuracyPawn>
		</equippedStatOffsets>
		<thingCategories>
			<li>ArmorHeadgear</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<layers>
				<li>Overhead</li>
			</layers>
		</apparel>
	</ThingDef>

	<ThingDef ParentName="Apparel_AR_FederationTrooperHelmetBase">
		<defName>Apparel_AR_FederationTrooperHelmet</defName>
		<label>federation trooper helmet</label>
		<description>A armored helmet designed by the Arellian Federation, with a built-in HUD and a protective plasteel-weave plate.</description>
		<graphicData>
			<texPath>ArellianThings/Pawn/Arellian/Apparel/Federation/TrooperHelmet/TrooperHelmet_south</texPath>
		</graphicData>
		<recipeMaker>
			<displayPriority>500</displayPriority>
		</recipeMaker>
		<apparel>
			<wornGraphicPath>ArellianThings/Pawn/Arellian/Apparel/Federation/TrooperHelmet/TrooperHelmet</wornGraphicPath>
			<forceEyesVisibleForRotations>
				<li>1</li>
				<li>2</li>
				<li>3</li>
			</forceEyesVisibleForRotations>
		</apparel>
	</ThingDef>

	<ThingDef ParentName="Apparel_AR_FederationTrooperHelmetBase">
		<defName>Apparel_AR_FederationShockTrooperHelmet</defName>
		<label>federation shocktrooper helmet</label>
		<description>A menacing armored helmet designed to induce terror, designed by the Arellian Federation. It has a built-in HUD and a protective plasteel-weave plate.</description>
		<graphicData>
			<texPath>ArellianThings/Pawn/Arellian/Apparel/Federation/ShockTrooperHelmet/TrooperHelmet_south</texPath>
		</graphicData>
		<recipeMaker>
			<displayPriority>500</displayPriority>
		</recipeMaker>
		<equippedStatOffsets>
			<TerrorSource MayRequire="Ludeon.RimWorld.Ideology">1</TerrorSource>
		</equippedStatOffsets>
		<apparel>
			<wornGraphicPath>ArellianThings/Pawn/Arellian/Apparel/Federation/ShockTrooperHelmet/TrooperHelmet</wornGraphicPath>
			<forceEyesVisibleForRotations>
				<li>1</li>
				<li>2</li>
				<li>3</li>
			</forceEyesVisibleForRotations>
		</apparel>
	</ThingDef>
</Defs>