<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<RulePackDef>
		<defName>Arellian_NamerUtility</defName>
		<rulePack>
			<rulesStrings>
				<li>First_M->[Fixed_M]</li>
				<li>First_F->[Fixed_F]</li>

				<li>Surname(p=2)->[Pre_L][Suf_L]</li>
				<li>Surname(p=0.5)->[Bodypart]</li>
				<li>Surname(p=0.5)->[Color]</li>
				<li>Surname(p=0.5)->[Metal]</li>
				<li>Surname(p=0.5)->[Nature]</li>
				<li>Surname(p=0.25)->[Color][Bodypart]</li>
				<li>Surname(p=0.25)->[Color][Nature]</li>
				<li>Surname(p=0.25)->[Metal][Bodypart]</li>
				<li>Surname(p=0.25)->[Metal][Nature]</li>
			</rulesStrings>
			<rulesFiles>
				<li>Fixed_M->Names/Arellian/First_Male_Fixed</li>
				<li>Fixed_F->Names/Arellian/First_Female_Fixed</li>

				<li>Pre_L->Names/Arellian/Last_Prefix</li>
				<li>Suf_L->Names/Arellian/Last_Suffix</li>
				<li>Bodypart->Names/Arellian/Word_Bodypart</li>
				<li>Color->Names/Arellian/Word_Color</li>
				<li>Metal->Names/Arellian/Word_Metal</li>
				<li>Nature->Names/Arellian/Word_Nature</li>
			</rulesFiles>
		</rulePack>
	</RulePackDef>

	<RulePackDef>
		<defName>Arellian_PawnNamer</defName>
		<include>
			<li>Arellian_NamerUtility</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_name->[First_M] [Surname]</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef>
		<defName>Arellian_PawnNamerFemale</defName>
		<include>
			<li>Arellian_NamerUtility</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_name->[First_F] [Surname]</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

<!--=====Federation =====-->

	<RulePackDef>
		<defName>AR_Fed_FactionNamer</defName>
		<rulePack>
			<rulesStrings>
				<li>r_name->[Federation]</li>
			</rulesStrings>
			<rulesFiles>
				<li>Federation->Names/Arellian/Federation/FactionNamer</li>
			</rulesFiles>
		</rulePack>
	</RulePackDef>

	<RulePackDef>
		<defName>LeaderNamer_AR_Fed</defName>
		<rulePack>
			<rulesStrings>
				<li>r_leaderTitle->[Leader]</li>
			</rulesStrings>
			<rulesFiles>
				<li>Leader->Names/Arellian/Federation/LeaderNamer</li>
			</rulesFiles>
		</rulePack>
	</RulePackDef>

	<RulePackDef>
		<defName>IdeoNamer_AR_Fed</defName>
		<rulePack><rulesStrings>
			<li>r_ideoName->Absolute Militocracy</li><!--절대 군국주의-->

			<li>r_ideoAdjective->militaristic</li><!--군사적-->

			<li>r_memberName->soldier</li><!--군인-->

			<li>creed(priority=1)->[memeCreed]</li>

			<li>hyphenPrefix->[memeHyphenPrefix]</li>
		</rulesStrings></rulePack>
	</RulePackDef>

	<RulePackDef>
		<defName>DeityNamer_AR_Fed</defName>
		<include>
			<li>Arellian_NamerUtility</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_deityName->[First_M] [Surname]</li>
				<li>r_deityName->[First_F] [Surname]</li>
			</rulesStrings>
		</rulePack>
	</RulePackDef>

	<RulePackDef>
		<defName>DeityTypeMaker_AR_Fed</defName>
		<include>
			<li>GlobalUtility</li>
		</include>
		<rulePack>
			<rulesStrings>
				<li>r_deityType->[Deity]</li>
			</rulesStrings>
			<rulesFiles>
				<li>Deity->Names/Arellian/Federation/DeityTypeNamer</li>
			</rulesFiles>
		</rulePack>
	</RulePackDef>

<!--================ Enclave ================-->

